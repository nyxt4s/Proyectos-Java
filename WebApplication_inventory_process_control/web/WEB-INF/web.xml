<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>userAuthentication</servlet-name>
        <servlet-class>CONTROLLER.userAuthentication</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cTipoDeUsuario</servlet-name>
        <servlet-class>CONTROLLER.cTipoDeUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controlador_Usuario</servlet-name>
        <servlet-class>CONTROLLER.Controlador_Usuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controlador_Venta</servlet-name>
        <servlet-class>CONTROLLER.Controlador_Venta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controlador_Categoria</servlet-name>
        <servlet-class>CONTROLLER.Controlador_Categoria</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>create_brands</servlet-name>
        <servlet-class>CONTROLLER.create_brands</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>create_category</servlet-name>
        <servlet-class>CONTROLLER.create_category</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Locales</servlet-name>
        <servlet-class>CONTROLLER.Locales</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CerrarSesion</servlet-name>
        <servlet-class>CONTROLLER.CerrarSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>create_product</servlet-name>
        <servlet-class>CONTROLLER.create_product</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>create_solicitud</servlet-name>
        <servlet-class>CONTROLLER.create_solicitud</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userAuthentication</servlet-name>
        <url-pattern>/Auth</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cTipoDeUsuario</servlet-name>
        <url-pattern>/cTipoDeUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controlador_Usuario</servlet-name>
        <url-pattern>/AdministracionDeUsuarios</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controlador_Venta</servlet-name>
        <url-pattern>/RealizarVenta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controlador_Categoria</servlet-name>
        <url-pattern>/AdministracionCategoria</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>create_brands</servlet-name>
        <url-pattern>/Marcas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>create_category</servlet-name>
        <url-pattern>/categoria</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Locales</servlet-name>
        <url-pattern>/local</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CerrarSesion</servlet-name>
        <url-pattern>/CerrarSesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>create_product</servlet-name>
        <url-pattern>/producto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>create_solicitud</servlet-name>
        <url-pattern>/SolicitudMercaderias</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
